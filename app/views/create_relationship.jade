md-dialog.user-dialog
  div(layout="horizontal" layout-sm="horizontal")
    main(flex)
      div(layout="column", layout-fill)
        md-toolbar
          .md-toolbar-tools.extra
            span.settings-header You are lonely :(
        md-content(layout="column" layout-fill)
          form(name="form")
              md-text-float(label="Relationship Name (should be short)" ng-model="newRelationship.name" required)
            .md-actions(layout="row" layout-align="space-around center")
              md-button.md-primary(ng-click="create()" ng-disabled="!form.$valid") Create
