md-content.md-default-theme.no-bg(layout="column" layout-fill)
  md-toolbar#home-toolbar
    .md-toolbar-tools
      span.title NuttyOrNice?
      span(flex layout="row" layout-align="end center" ng-if="currentUser")
        input#name-search(ng-show="searching" ng-model="search.name" placeholder="Name" style="margin-right: -48px")
        md-button(ng-click="showBottomSheet($event)")
          i.fa.fa-ellipsis-v
  .main-container(layout="vertical")
    div(ng-if="!currentUser.relationship_ref")
      div(flex layout="horizontal" layout-sm="horizontal")
      main(flex)
        md-toolbar
          .md-toolbar-tools.extra
            span.md-flex.settings-header You are lonely :(
        md-content.md-padding.extra
          h3 Please enter your significant other's gmail address to invite them
          form(action="/invite")
            div(class="row")
              input(label="Bae's Email" name="email")
              input(type="hidden" name="uid" value="{{currentUser.uid}}")
              input(type="hidden" name="name" value="{{currentUser.name}}")
              .actions
                md-button.md-raised.md-primary(type="submit") Submit
