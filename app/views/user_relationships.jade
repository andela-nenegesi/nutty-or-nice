md-dialog.user-dialog
  div(layout="horizontal" layout-sm="horizontal")
    main(flex)
      md-toolbar
        .md-toolbar-tools.extra
          span.md-flex.settings-header Select A Relationship
      md-content.md-padding
        md-list
          md-item(ng-repeat="relationship in relationships")
            .user-list
              md-button.md-raised.md-primary.small-margin(ng-bind="relationship.name" aria-label="{{relationship.name}}" ng-click="goto(relationship.$id)")
      md-content(layout="row" layout-align="end center")
        md-button.md-raised.md-accent.small-margin Create One

