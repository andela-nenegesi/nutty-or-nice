md-content.md-padding(flex)
  md-content(layout="row")
    md-card.nutty-card(flex="47")
      md-toolbar(style="height: 25px")
          .md-toolbar-tools
            span Nices
      .md-list.scroll
        md-item(ng-repeat="($id, nice) in noRelUser.nices")
          md-item(ng-repeat="($id, item) in nice.occurences")
            md-item-content
              .md-tile-left
                  img.face(ng-src="{{item.picture}}" alt="{{noRelUser.name}}")
              .md-tile-content
                h3 {{item.title}}
                h4 {{item.description}}
          md-divider(ng-if="!$last")
    md-card.nutty-card(flex="47")
      md-toolbar(style="height: 25px")
        .md-toolbar-tools
          span Nuttys
      .md-list.scroll
