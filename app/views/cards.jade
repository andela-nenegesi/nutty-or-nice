md-content.md-padding(flex)
  md-content(layout="row")
    md-card.nutty-card(flex="47")
      md-toolbar(style="height: 25px")
          .md-toolbar-tools
            span Nices
      .md-list.scroll
        md-item(ng-repeat="($id, nice) in noRelUser.nices")
          md-item-content
            .md-tile-left
                img.face(ng-src="{{nice.picture}}" alt="{{noRelUser.name}}")
            .md-tile-content
              h3 {{nice.title}}
              h4 {{nice.description}}
          md-divider(ng-if="!$last")
    md-card.nutty-card(flex="47")
      md-toolbar(style="height: 25px")
        .md-toolbar-tools
          span Nuttys
      .md-list.scroll
        md-item(ng-repeat="($id, nutty) in noRelUser.nuttys | orderObjectBy:'created_at':true")
          md-item-content
            .md-tile-left
                img.face(ng-src="{{nutty.picture}}" alt="{{noRelUser.name}}")
            .md-tile-content
              h3 {{nutty.title}}
              h4 {{nutty.description}}
          md-divider(ng-if="!$last")
  md-content(layout="row")
    md-card.nutty-card(flex="47")
      md-toolbar(style="height: 25px")
          .md-toolbar-tools
            span Rewards
      .md-list.scroll
        md-item(ng-repeat="($id, nice) in noRelUser.nices")
          md-item-content
            .md-tile-left
                img.face(ng-src="{{nice.picture}}" alt="{{noRelUser.name}}")
            .md-tile-content
              h3 {{nice.consequence}}
          md-divider(ng-if="!$last")                
    md-card.nutty-card(flex="47")
      md-toolbar(style="height: 25px")
          .md-toolbar-tools
            span Punishments
      .md-list.scroll
        md-item(ng-repeat="($id, nutty) in noRelUser.nuttys")
          md-item-content
            .md-tile-left
                img.face(ng-src="{{nutty.picture}}" alt="{{noRelUser.name}}")
            .md-tile-content
              h3 {{nutty.consequence}}
          md-divider(ng-if="!$last")                
